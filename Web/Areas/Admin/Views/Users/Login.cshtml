@model Models.ViewModels.UserLogin
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" type="image/png" sizes="16x16" href="~/Areas/Admin/Assets/plugins/images/favicon.png">
    <title>Login Admin</title>
    <!-- Bootstrap Core CSS -->
    <link href="~/Areas/Admin/Assets/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- animation CSS -->
    <link href="~/Areas/Admin/Assets/css/animate.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="~/Areas/Admin/Assets/css/style.css" rel="stylesheet">
    <!-- color CSS -->
    <link href="~/Areas/Admin/Assets/css/colors/default.css" id="theme" rel="stylesheet">

</head>
<body>
    <!-- Preloader -->
    <div class="preloader">
        <div class="cssload-speeding-wheel"></div>
    </div>
    <section id="wrapper" class="new-login-register">
        <div class="lg-info-panel" style="background: url(/Areas/Admin/Assets/plugins/images/login-register.jpg) center center/cover no-repeat !important; width: 500px; height: 100%; position: fixed ">
            <div class="inner-panel">
                <a href="javascript:void(0)" class="p-20 di"><img src="~/Areas/Admin/Assets/plugins/images/admin-logo.png"></a>
                <div class="lg-content">
                    <h2>THE ULTIMATE &amp; MULTIPURPOSE ADMIN TEMPLATE OF 2017</h2>
                    <p class="text-muted">with this admin you can get 2000+ pages, 500+ ui component, 2000+ icons, different demos and many more... </p>
                    <a href="#" class="btn btn-rounded btn-danger p-l-20 p-r-20"> Buy now</a>
                </div>
            </div>
        </div>
        <div class="new-login-box">
            <div class="white-box">
                <h3 class="box-title m-b-0">Sign In to Admin</h3>
                <small>Nhập thông tin của bạn xuống bên dưới</small>
                @using (Html.BeginForm("Login", "Users", FormMethod.Post, new { @class = "form-horizontal new-lg-form", @id = "loginform" }))
                {
                    @Html.AntiForgeryToken()
                <div>@Html.ValidationMessage("CheckLogin", new { @class = "text-danger" })</div>
                    <div class="form-group  m-t-20">
                        <div class="col-xs-12">
                            <label>Email Address</label>
                            @Html.EditorFor(model => model.Email,  new { htmlAttributes = new { @class = "form-control", @required = "true", @placeholder = "Username" } })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-xs-12">
                            <label>Password</label>
                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @required = "true", @placeholder = "Username" } })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <div class="checkbox checkbox-info pull-left p-t-0">
                            </div>
                            <a href="@Url.Action("ForgotPassword","Users")" class="text-dark pull-right"><i class="fa fa-lock m-r-5"></i> Quên mật khẩu?</a>
                        </div>
                    </div>
                    <div class="form-group text-center m-t-20">
                        <div class="col-xs-12">
                            <button class="btn btn-info btn-lg btn-block btn-rounded text-uppercase waves-effect waves-light" type="submit">Log In</button>
                        </div>
                    </div>
                    
                }
            <form class="form-horizontal" id="recoverform" action="post">
                <div class="form-group ">
                    <div class="col-xs-12">
                        <p style="font-size:18px">Phục hồi mật khẩu</p>
                        <p class="text-muted">Nhập vào Email của bạn để lấy lại mật khẩu </p>
                    </div>
                </div>
                <div class="form-group ">
                    <div class="col-xs-12">
                        <input class="form-control" name="Email" type="text" required="" placeholder="Email">
                    </div>
                </div>
                <div class="form-group text-center m-t-20">
                    <div class="col-xs-12">
                        <button class="btn btn-primary btn-lg btn-block text-uppercase waves-effect waves-light" type="submit">Đặt lại mật khẩu</button>
                    </div>
                </div>
            </form>
            </div>
        </div>
    </section>
    <!-- jQuery -->
    <script src="~/Areas/Admin/Assets/plugins/bower_components/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap Core JavaScript -->
    <script src="~/Areas/Admin/Assets/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- Menu Plugin JavaScript -->
    <script src="~/Areas/Admin/Assets/plugins/bower_components/sidebar-nav/dist/sidebar-nav.min.js"></script>

    <!--slimscroll JavaScript -->
    <script src="~/Areas/Admin/Assets/js/jquery.slimscroll.js"></script>
    <!--Wave Effects -->
    <script src="~/Areas/Admin/Assets/js/waves.js"></script>
    <!-- Custom Theme JavaScript -->
    <script src="~/Areas/Admin/Assets/js/custom.min.js"></script>
    <!--Style Switcher -->
    <script src="~/Areas/Admin/Assets/plugins/bower_components/styleswitcher/jQuery.style.switcher.js"></script>
</body>
</html>

