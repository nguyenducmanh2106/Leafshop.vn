@model Models.ViewModels.ChangePasswordModel
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section styleCss_1{
    <!-- toast CSS -->
    <link href="~/Content/users/userRight.css" rel="stylesheet" />
}
<div class="main-css-fluid">
    <section class="main-css padding-config">
        <div class="main-container">
            <!--START MAIN RIGHT -->
            <div class="main-right woo-control-right fr col-auto" style="width: 910px;box-shadow: 0 1px 2px 0 rgba(0,0,0,.13);;padding-bottom:10px;margin-bottom:50px">
                <div class="page-control-right col-md-auto">
                    <div class="my-account-section">
                        <div class="my-account-section__header">
                            <div class="my-account-section__header-left">
                                <div class="my-account-section__header-title">
                                    Thay đổi mật khẩu
                                </div>
                                <div class="my-account-section__header-subtitle">
                                    Thay đổi mật khẩu tài khoản
                                </div>
                            </div>
                        </div>

                        @using (Html.BeginForm("ChangePassword", "Users"))
                        {
                            <div class="my-account-profile">
                                <div class="my-account-profile__left">
                                    <div class="input-with-label">
                                        <div class="input-with-label__wrapper">
                                            <div class="input-with-label__label">
                                                <label>Nhập mật khẩu cũ</label>
                                            </div><div class="input-with-label__content">
                                                <div class="my-account__inline-container">
                                                    <div class="my-account__input-text">
                                                        <div class="input-with-validator">
                                                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @style = "box-shadow: none;width:1000px; max-width:358px" } })
                                                        </div>
                                                        <br />
                                                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                                        @Html.ValidationMessage("error", new { @class = "text-danger" })
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="input-with-label">
                                        <div class="input-with-label__wrapper">
                                            <div class="input-with-label__label">
                                                <label>Nhập mật khẩu mới</label>
                                            </div><div class="input-with-label__content">
                                                <div class="my-account__inline-container">
                                                    <div class="my-account__input-text">
                                                        <div class="input-with-validator">
                                                            @Html.EditorFor(model => model.NewPassword, new { htmlAttributes = new { @style = "box-shadow: none;width:1000px; max-width:358px" } })
                                                        </div>
                                                        <br />
                                                        @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="input-with-label">
                                        <div class="input-with-label__wrapper">
                                            <div class="input-with-label__label">
                                                <label>Nhập lại mật khẩu mới</label>
                                            </div><div class="input-with-label__content">
                                                <div class="my-account__inline-container">
                                                    <div class="my-account__input-text">
                                                        <div class="input-with-validator">
                                                            @Html.EditorFor(model => model.ConfirmNewPassword, new { htmlAttributes = new { @style = "box-shadow: none;width:1000px; max-width:358px" } })
                                                        </div>
                                                        <br />
                                                        @Html.ValidationMessageFor(model => model.ConfirmNewPassword, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="my-account-page__submit">
                                <button type="submit" class="btn btn-solid-primary btn--m btn--inline">Lưu</button>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <!--END MAIN RIGHT -->
            <!--START MAIN LEFT -->
            @{Html.RenderAction("MainleftUser", "Users");}
            <!--END MAIN LEFT -->
        </div>
        <!--END MAIN CONTAINER -->
    </section>
</div>

